@page "/calc"
@rendermode InteractiveServer

<PageTitle>Расчет ставок</PageTitle>

<h1>Расчет ставок</h1>

<div>
    <button class="@BtnSendClass" @onclick="@(async () => await SendToKafka())">
        Отправить ставки на расчет
    </button>

    <button class="@BtnCancelClass" @onclick="@(async () => await CancelSendingToKafka())">
        Отмена
    </button>
</div>


<p class="p-4">
    Статус отправки: @_currentCount%
 </p>
